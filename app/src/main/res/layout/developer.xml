<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="start"
            android:layout_width="107dp"
            android:layout_height="match_parent">
            <Button
                android:theme="@style/Button.Menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="6dp"
                android:text="@string/Back"
                android:textSize="17sp"
                android:textColor="@color/TextButton"
                android:textAllCaps="false"
                android:fontFamily="@font/golos_text_regular"
                android:letterSpacing="0"
                android:onClick="Back"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/BrandColor"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="17sp"
                android:textColor="@color/Text"
                android:gravity="center"
                android:id="@+id/Heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Developers"
                android:fontFamily="@font/golos_text_medium"
                android:letterSpacing="-0.02"/>
        </LinearLayout>
        <View
            android:layout_width="107dp"
            android:layout_height="match_parent"/>
    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/BrandColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Developer_Main1"
                        android:fontFamily="@font/golos_text_demibold" />

                    <TextView
                        android:textSize="17sp"
                        android:textColor="@color/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Developer_Main"
                        android:fontFamily="@font/golos_text_regular"
                        android:letterSpacing="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="VK_Eugene"
                        android:contentDescription="@string/VK"
                        app:srcCompat="@drawable/ic_vk" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="Instagram_Eugene"
                        android:contentDescription="@string/Instagram"
                        app:srcCompat="@drawable/ic_instagram"
                        android:paddingStart="32dp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/BrandColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Developer_Main1_2"
                        android:fontFamily="@font/golos_text_demibold" />

                    <TextView
                        android:textSize="17sp"
                        android:textColor="@color/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Developer_Main_2"
                        android:fontFamily="@font/golos_text_regular"
                        android:letterSpacing="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="VK_Evgenia"
                        android:contentDescription="@string/VK"
                        app:srcCompat="@drawable/ic_vk" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="Instagram_Evgenia"
                        android:contentDescription="@string/Instagram"
                        app:srcCompat="@drawable/ic_instagram"
                        android:paddingStart="32dp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
